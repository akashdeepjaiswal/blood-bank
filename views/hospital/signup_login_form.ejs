<%- include('loginpage_header'); -%>

    <div class="container">
        <div class="row-fluid">
            <div class="span12">
                <div class="span6" style="margin: 2rem 0 4rem 0;">
                    <div class="area">
                        <form class="form-horizontal" action="/hospital/signin" method="POST">
                            <div class="heading">
                                <h4 class="form-heading">Sign In</h4>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="inputEmail">Email</label>

                                <div class="controls">
                                    <input id="inputEmail" name="email" placeholder="E.g. akash@gmail.com" type="email"
                                        required>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="inputPassword">Password</label>

                                <div class="controls">
                                    <input id="inputPassword" name="password" placeholder="Min. 8 Characters"
                                        type="password" required>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button class="btn btn-success" type="submit">Sign In</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="span6" style="margin: 2rem 0 4rem 0;">
                    <div class="area">
                        <form class="form-horizontal" action="/hospital/signup" method="POST">
                            <div class="heading">
                                <h4 class="form-heading">Sign Up</h4>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="inputName">Hospital Name</label>

                                <div class="controls">
                                    <input id="inputName" name="name" placeholder="E.g. Sahara Hospital" type="text"
                                        required>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="inputContact">Contact</label>

                                <div class="controls">
                                    <input id="inputContact" name="contact" placeholder="E.g. 1234567891 " type="number"
                                        required>
                                </div>
                            </div>


                            <div class="control-group">
                                <label class="control-label" for="inputEmail">Email</label>

                                <div class="controls">
                                    <input id="inputEmail" name="email" placeholder="E.g. akash@gmail.com" type="email"
                                        required>
                                </div>
                            </div>

                            <div class="control-group">
                                <label class="control-label" for="inputPassword">Password</label>

                                <div class="controls">
                                    <input id="inputPassword" name="password" placeholder="Min. 8 Characters"
                                        type="password" required>
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls">
                                    <button class="btn btn-success" type="submit">SignUp</button>
                                </div>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%- include('loginpage_footer'); -%>