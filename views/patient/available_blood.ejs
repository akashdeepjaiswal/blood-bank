<%- include('header',{title: "Available Blood Type" }); -%>

    <% if(blood_details.length>0) { %>
        <div>
            <h2>view blood avaible in this hospitall. data from blood bank table</h2>
        </div>

        <table id="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Hospital Id</th>
                    <th>Hospital Name</th>
                    <th>A+</th>
                    <th>A-</th>
                    <th>B+</th>
                    <th>B-</th>
                    <th>AB+</th>
                    <th>AB-</th>
                    <th>O+</th>
                    <th>O-</th>
                    <!-- a_positive, a_negative, b_positive, b_negative, ab_positive, ab_negative, o_positive, o_negative -->
                </tr>
            </thead>
            <tbody>
                <% blood_details.forEach(function (item) { %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.hospital_id %>
                        </td>
                        <td>
                            <%= item.hospital_name %>
                        </td>
                        <td>
                            <%= item.a_positive %>
                        </td>
                        <td>
                            <%= item.a_negative %>
                        </td>
                        <td>
                            <%= item.b_positive %>
                        </td>
                        <td>
                            <%= item.b_negative %>
                        </td>
                        <td>
                            <%= item.ab_positive %>
                        </td>
                        <td>
                            <%= item.ab_negative %>
                        </td>
                        <td>
                            <%= item.o_positive %>
                        </td>
                        <td>
                            <%= item.o_negative %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <!-- request blood sample  -->
        <div class="container">
            <form method="post" action="/patient/available-blood">
                <div class="form-row">

                    <div class="col-md-4 mb-3">
                        <input type="number" min="0" class="form-control " name="hosp_id" id="" placeholder="id"
                            required>
                    </div>
                    <!-- <div class="col-md-4 mb-3">
                        <input type="text" min="0" class="form-control " name="hosp_name" id="" placeholder="name" required>
                    </div> -->
                    <div class="col-md-4 mb-3">

                        <select id="inputBloodType" name="bloodtype" placeholder="Blood Type" class="form-control "
                            required>
                            <option value="" disabled selected>Select your option</option>
                            <option value="A+"> A+</option>
                            <option value="A-"> A-</option>
                            <option value="B+"> B+</option>
                            <option value="B-"> B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+"> O+</option>
                            <option value="O-"> O-</option>
                        </select>

                    </div>

                    <div class="col-md-4 mb-3">
                        <input type="number" min="0" class="form-control " name="unit_requested" id=""
                            placeholder="unit" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <input type="hidden" class="form-control " name="pat_id" id="" value=<%=pat_id %>
                        placeholder="unit" >
                    </div>

                </div>
                <button type="submit" class="btn btn-primary">Request Sample</button>
            </form>
        </div>


        <% } else {%>

            <div>
                <h2>Blood Bank is empty.</h2>
            </div>
            <%} %>

<%- include('footer'); -%>